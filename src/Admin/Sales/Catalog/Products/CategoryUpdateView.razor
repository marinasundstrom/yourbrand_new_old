<EditForm Model="@Model" OnValidSubmit="Model.UpdateCategory">
    <DataAnnotationsValidator />

    <MudAutocomplete Label="Category" SearchFunc="Model.Search" @bind-Value="Model.Category" ToStringFunc="x => x.Name"
        Strict="false" Variant="Variant.Outlined" For="() => Model.Category"
        ItemDisabledFunc="x => !x.CanAddProducts" />

    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Class="mt-4">Update category</MudButton>
</EditForm>

@code
{
    [Parameter]
    public CategoryUpdateViewModel Model { get; set; }
}